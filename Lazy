#-=-=-=-=-=- [       ] =-=-=-=-=-=-
nocolor="\033[0m"
red="\033[0;31m"
blue="\033[0;34m"
green="\033[0;32m"
yellow="\033[0;33m"
red_b="\033[101m"
echo -e "${green}______________________________________________________${nocolor}"
echo -e "${red_b}  ‚úéIf You Want To Cancel Any Operation Click ‚úÑ[CTRL+C]${nocolor}${nocolor}"
echo "                                                                   "
echo -e "${blue}‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ‚ãØ${nocolor}"
echo "                        "
read -p " ‚ùÖPlease Enter The Web Site :‚üπ  " web
echo "                            "
if [ -z $web  ]
then
echo -e "${red} =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=${nocolor}"
echo -e "${red} ‚ùÖThe Execute :‚üπ ./Lazy ${nocolor}\r\nüëç"
echo -e "${red} ‚ùÖExample :‚üπ Please Enter The Web Site :‚üπ mohamed101hamdi.com${nocolor}"
echo -e "${red} =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=${nocolor}"
exit
else

echo "============================================="
echo "                                                                   "
echo -e " ${blue}[*]${nocolor} The Target ‚üπ ${red} ${web} ${nocolor}\r\n"
echo -e "${yellow}   ** üßê Starting Enumeration üßê **${nocolor}"
echo "============================================="
fi
#================================================================================#
echo "                                          "
echo "                                          "
web_info(){
  echo -e "${yellow}*The First [+]‚üπ Web Information Collection -${nocolor}"
  echo "                                        "
  whatweb -a 3 --no-errors -v $web
  echo "                                        "
  echo " __________________"
  echo -e "${yellow} ‚ñ† Firewall Type üëá${nocolor}"
  echo " ------------------"
  wafw00f  -a -v -r $web
  echo -e "${blue}========================================================${nocolor} "
}
web_info
echo "                                          "
echo "                                          "
fuzz_dir(){
  echo -e "${yellow}*The Scond [+]‚üπ Fuzzing Directory -${nocolor}"
  ffuf -w /usr/share/wordlists/dirbuster/directory-list-2.3-medium.txt  -u https://$web/FUZZ  -mc 200   
  dirsearch -u $web
  dirb  https://www.$web/  
  echo -e "${blue}========================================================${nocolor} "
}
fuzz_dir
echo "                                          "
echo "                                          "
sub_domain(){
  echo -e "${yellow}*The Third [+]‚üπ Sub_Domain Information Collection -${nocolor}"
  echo "                                        "
  amass enum -active -d $web
  echo -e "${blue}========================================================${nocolor} "
}
sub_domain
echo "                                          "
echo "                                          "
report_info(){
  echo -e "${yellow}*The Fourth [+]‚üπ Web Report -${nocolor}"
  echo -e "${red_b}  ‚úéIf There Is a Delay Click ‚úÑ[CTRL+C]${nocolor}${nocolor}"
  echo "                                        "
  nikto   --url=$web --port=443
  echo -e "${blue}========================================================${nocolor} "
}
report_info
echo "                                          "
echo "                                          "
dns_info(){
  echo -e "${yellow}*The Fifth [+]‚üπ DNS Information Collection -${nocolor}"
  echo "                                        "
  dnsenum $web -w -d 5s
  echo -e "${blue}========================================================${nocolor}"  
}
dns_info
